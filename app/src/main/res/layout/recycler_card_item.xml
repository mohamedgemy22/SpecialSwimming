<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/grey_back">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginEnd="@dimen/_7sdp"
        android:layout_marginStart="@dimen/_7sdp"
        android:foreground="@drawable/ripple"
        android:shadowDx="@android:integer/config_shortAnimTime"
        android:background="@drawable/item_pink">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_itemcard"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="7dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/text1_itemcard"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/coach_img"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="0.60dp" />

        <TextView
            android:id="@+id/text1_itemcard"
            android:layout_width="207dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="13dp"
            android:padding="10dp"
            android:text="qersh"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text2_itemcard"
            android:layout_width="180dp"
            android:layout_height="39dp"
            android:layout_below="@id/image_itemcard"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="3dp"
            android:layout_marginTop="-76dp"
            android:layout_marginEnd="18dp"
            android:layout_toEndOf="@id/image_itemcard"
            android:padding="10dp"
            android:text="@string/programer"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text3_itemcard"
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_itemcard"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-34dp"
            android:layout_marginEnd="104dp"
            android:padding="5dp"
            android:text="@string/price"
            android:textSize="15sp"
            android:textStyle="bold" />


    </RelativeLayout>



</androidx.cardview.widget.CardView>